{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1024px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

	<section class="hero">
	  <div class="hero-body">
	    <div class="container">
	      <h1 class="title">
	        {{ controller_name }}
	      </h1>
	      <h2 class="subtitle">
	        Nom de ma variable : {{ title }}
	      </h2>
	    </div>
	  </div>
</section>

<div class="container">
  <div class="notification">
  	<p>
		{{ description }}
	</p>
  </div>
</div>


<table class="table is-hoverable is-narrow">

	<thead>

		<tr>
		    	<th> Index </th>
		      	<th> Option </th>
		    	<th> Description</th>
		</tr>
		    

	</thead>

	<tbody>

	{% for key,item in list %}
		
		  
		  	<tr>
		  		<td>{{ loop.index}}</td>
		  		<td>{{ key }}</td>
		  		<td>{{ item }}</td>
		  	</tr>
		  	

	{%endfor%}

	</tbody>
</table>

